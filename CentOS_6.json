{
  "variables": {
    "version": "{{env `VERSION`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo {{.Vars}} sh {{.Path}}",
      "scripts": [
	"scripts/ea.sh",
        "scripts/vmtools.sh",
	"scripts/salt-minion.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "build.tgz"
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "iso_url": "http://mirrors.usc.edu/pub/linux/distributions/centos/6.8/isos/x86_64/CentOS-6.8-x86_64-netinstall.iso",
      "iso_checksum": "56d9cc5757ed1443af7b321967622a108978328f72e58050d31bcf1998dfd162",
      "iso_checksum_type": "sha256",
      "ssh_username": "ea",
      "ssh_password": "ea",
      "ssh_wait_timeout": "30m",
      "disk_size": "32000",
      "disk_additional_size": "32000",
      "tools_upload_flavor": "linux",
      "guest_os_type": "centos-64",
      "headless": "true",
      "shutdown_command": "sudo /sbin/halt -p",
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "2",
        "vhv.enable": "TRUE"
      }
    }
  ]
}
